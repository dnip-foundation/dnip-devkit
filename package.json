{
  "name": "dnip-devkit",
  "version": "0.4.3",
  "author": "volodymyr.sentiurin@gmail.com",
  "description": "Distributed Node Interface Protocol (devkit)",
  "license": "Apache-2.0",
  "homepage": "https://dnip-labs.github.io/docs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dnip-labs/dnip-devkit.git"
  },
  "type": "module",
  "main": "./dist/index.js",
  "engines": {
    "node": ">= 22.x.x"
  },
  "files": [
    "json-schema",
    "dist",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./test-suite": {
      "import": "./test/suite/index.ts"
    }
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "compile": "node ./scripts/compile",
    "build": "npm run compile; rm -rf dist; tsc --project tsconfig.build.json",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --verbose",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "lint": "tsc; eslint . --ext .ts",
    "lint:fix": "tsc; eslint . --ext .ts --fix"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ts-deepmerge": "^7.0.3"
  },
  "devDependencies": {
    "@types/jest": "29.5.14",
    "@types/node": "22.17.2",
    "@typescript-eslint/eslint-plugin": "8.35.1",
    "@typescript-eslint/parser": "8.35.1",
    "eslint": "8.57.1",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "2.32.0",
    "jest": "29.7.0",
    "quicktype": "^23.2.6",
    "ts-jest": "29.4.0",
    "ts-node": "10.9.2",
    "typescript": "5.8.3"
  }
}

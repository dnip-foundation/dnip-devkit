{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "implemented.json",

  "definitions": {
    "execute": {},

    "action": {
      "type": "object",
      "properties": {
        "meta": { "type": "object", "additionalProperties": true },
        "headers": {},
        "input": {},
        "output": {},
        "execute": {},
        "executePath": { "type": "string" },
        "middlewares": {}
      },
      "required": [
        "meta",
        "headers",
        "input",
        "output",
        "execute",
        "executePath",
        "middlewares"
      ],
      "additionalProperties": false
    },

    "cron": {
      "type": "object",
      "properties": {
        "disabled": { "type": "boolean" },
        "timezone": {
          "type": "string",
          "pattern": "^([a-zA-Z_]{2,14}\/){1,2}[a-zA-Z_]{2,14}$"
        },
        "jobs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "pattern": { "type": "string" },
              "execute": { "$ref": "#/definitions/execute" },
              "executeOnComplete": { "$ref": "#/definitions/execute" },
              "disabled": { "type": "boolean" }
            },
            "required": ["name", "pattern", "execute"],
            "additionalProperties": false
          }
        }
      },
      "required": ["jobs"],
      "additionalProperties": false
    },

    "gateway": {
      "type": "object",
      "properties": {
        "middlewares": {
          "type": "array",
          "items": {}
        },
        "routes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "url": { "type": "string" },
              "method": { "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"] },
              "action": {
                "oneOf": [
                  { "type": "string" },
                  { "$ref": "#/definitions/action" }
                ]
              }
            },
            "required": ["url", "method"],
            "additionalProperties": false
          }
        }
      },
      "required": ["middlewares", "routes"],
      "additionalProperties": false
    },

    "service": {
      "type": "object",
      "properties": {
        "version": { "$ref": "./protocol.json#/definitions/service/properties/version" },
        "transports": { "$ref": "./transports.json" },
        "actions": {
          "type": "object",
          "additionalProperties": { "$ref": "#/definitions/action" }
        }
      },
      "required": ["version", "transports", "actions"],
      "additionalProperties": false
    }
  },

  "type": "object",
  "properties": {
    "services": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/service" }
    },
    "gateway": { "$ref": "#/definitions/gateway" },
    "cron": { "$ref": "#/definitions/cron" }
  },
  "required": [],
  "additionalProperties": false
}